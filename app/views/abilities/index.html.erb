<div class="container mx-auto my-6">
  <h1 class="text-2xl font-bold mb-6">Abilities</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @abilities.each do |ability| %>
      <div class="card bg-white p-6 rounded-lg shadow-lg">
        <%= link_to ability.name, ability, class: "text-blue-500 hover:text-blue-700 font-semibold" %>
      </div>
    <% end %>
  </div>

  <div class="my-8">
    <%= paginate @abilities, window: 2, outer_window: 0, class: 'flex justify-center space-x-1' %>
  </div>
</div>
