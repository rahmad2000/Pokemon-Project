<div class="container mx-auto my-6">
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold mb-4"><%= @ability.name.capitalize %></h1>
    <p class="text-gray-700 mb-4"><%= @ability.description %></p>

    <div class="mt-6">
      <h2 class="text-2xl font-bold">Pokemons with this Ability:</h2>
      <ul>
        <% @ability.pokemons.uniq.each do |pokemon| %>
          <li class="mb-2">
            <%= link_to pokemon.name.capitalize, pokemon_path(pokemon), class: "inline-block bg-blue-200 rounded-full px-3 py-1 text-sm font-semibold text-blue-700 hover:bg-blue-300" %>
          </li>
        <% end %>
      </ul>
    </div>

    <%= link_to "Back", abilities_path, class: "mt-6 inline-block bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
