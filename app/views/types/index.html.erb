<div class="container mx-auto px-4 py-6">
  <h1 class="text-3xl font-bold text-center mb-6">Pokemon Types</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @types.each do |type| %>
      <div class="bg-white rounded-lg shadow-lg p-4 flex items-center justify-between">
        <%= link_to type.name.titleize, type_path(type), class: "text-lg font-semibold text-blue-600 hover:text-blue-800" %>
      </div>
    <% end %>
  </div>
</div>
