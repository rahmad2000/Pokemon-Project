<!-- app/views/pokemons/show.html.erb -->
<div class="container mx-auto my-6">
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold mb-4"><%= @pokemon.name.capitalize %></h1>
    <%= image_tag @pokemon.url, alt: @pokemon.name, class: "pokemon-image mx-auto mb-4" if @pokemon.url.present? %>


    <div class="mb-4">
      <p class="text-gray-700"><strong>Height:</strong> <%= @pokemon.height %></p>
      <p class="text-gray-700"><strong>Weight:</strong> <%= @pokemon.weight %></p>
      <p class="text-gray-700"><strong>Color:</strong> <%= @pokemon.color %></p>
      <p class="text-gray-700"><strong>Evolves From:</strong> <%= @pokemon.evolves_from %></p>
      <p class="text-gray-700"><strong>Generation:</strong> <%= @pokemon.generation %></p>
    </div>

    <div>
      <h2 class="text-2xl font-bold">Pokemon Types:</h2>
      <% @pokemon.types.uniq.each do |type| %>
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= type.name.capitalize %></span>
      <% end %>
    </div>

    <div class="mt-6">
      <h2 class="text-2xl font-bold">Pokemon Abilities:</h2>
      <% @pokemon.abilities.each do |ability| %>
        <div class="mb-2">
          <span class="inline-block bg-blue-200 rounded-full px-3 py-1 text-sm font-semibold text-blue-700 mr-2"><%= ability.name.capitalize %></span>
          <p class="text-gray-600"><%= ability.description %></p>
        </div>
      <% end %>
    </div>

    <%= link_to "Back", pokemons_path, class: "mt-6 inline-block bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
